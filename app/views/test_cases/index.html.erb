<h1>Listing test_cases</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @test_cases.each do |test_case| %>
  <tr>
    <td><%= test_case.name %></td>
    <td><%= test_case.title %></td>
    <td><%= test_case.description %></td>
    <td><%= link_to 'Show', test_case %></td>
    <td><%= link_to 'Edit', edit_test_case_path(test_case) %></td>
    <td><%= link_to 'Destroy', test_case, :confirm => 'Are you sure?', :remote => true, :class =>'delete_test_case', :method => :delete %></td>
  </tr>
<% end %>
</table>

